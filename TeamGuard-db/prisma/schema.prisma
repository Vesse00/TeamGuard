generator client {
  provider = "prisma-client-js"
  // UWAGA: Nie dodajemy tu żadnego output ani previewFeatures
}

datasource db {
  provider = "sqlite"
  // W wersji 5.10.2 to jest JEDYNY poprawny sposób:
  url      = env("DATABASE_URL")
}

// --- Modele ---
model Employee {
  id          Int       @id @default(autoincrement())
  isSystemAdmin  Boolean           @default(false) // Czy to konto admina? (Nieusuwalne)
  userId         Int?              @unique         // Powiązanie z kontem logowania (Opcjonalne)
  user           User?             @relation(fields: [userId], references: [id]) // Relacja (strona A)
  firstName   String
  lastName    String
  position    String
  
  // RELACJA: Dział (Wiele:1) -> TO JEST KLUCZOWA ZMIANA
  departmentId   Int?
  department     Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  email       String?  @unique
  hiredAt     DateTime
  avatarInitials String?
  compliance  ComplianceEvent[]
  onboardingTasks OnboardingTask[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ComplianceEvent {
  id          Int       @id @default(autoincrement())
  type        String    @default("OTHER")
  name        String
  expiryDate  DateTime
  status      String    @default("VALID") // "VALID", "EXPIRED", "WARNING"
  issueDate   DateTime @default(now())
  duration    String   @default("1")
  employeeId  Int
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String   // Tu będzie hash hasła
  createdAt DateTime @default(now())
  employee  Employee? // <--- (Relacja strona B)

  //pola: Ustawienia Raportów
  reportEnabled Boolean        @default(false) // Czy raporty są włączone
  reportDay     String         @default("MONDAY") // np. MONDAY, FRIDAY
  reportTime    String         @default("09:00")

  // --- KONFIGURACJA 1: ALERTY EMAIL (Szybkie powiadomienia) ---
  emailEnabled  Boolean  @default(true)
  emailDays     String   @default("MONDAY,WEDNESDAY,FRIDAY") // Np. "MONDAY,TUESDAY"
  emailTime     String   @default("08:00")

  // --- ODZYSKIWANIE HASŁA ---
  resetCode       String?   // Kod np. "123456"
  resetCodeExpiry DateTime? // Kiedy kod wygasa

  role          String   @default("USER") // "ADMIN" lub "USER"
  inviteToken   String?  // Token do ustawienia hasła z maila
  
  // Relacja z powiadomieniami
  notifications Notification[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  isRead    Boolean  @default(false) // Czerwona kropka = false
  type      String   // "REPORT", "ALERT", "INFO"
  link      String?  // Gdzie przekierować po kliknięciu (np. /reports/123)
  createdAt DateTime @default(now())
}

// ---  MODEL: ARCHIWUM RAPORTÓW ---
model GeneratedReport {
  id           Int      @id @default(autoincrement())
  generatedAt  DateTime @default(now())
  totalStaff   Int
  expiredCount Int
  warningCount Int
  detailsJson  String   // Zapiszemy tu szczegóły w formacie JSON
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String   // np. "ODNOWIENIE", "EDYCJA", "USUNIĘCIE"
  details     String   // np. "Jan Kowalski odnowił badania dla Adama Nowaka"
  performedBy String   // Imię i Nazwisko Admina
  targetId    Int?     // ID pracownika, którego to dotyczy (dla linkowania)
  createdAt   DateTime @default(now())
}

// --- DZIAŁY (Nowa tabela) ---
model Department {
  id                  Int                  @id @default(autoincrement())
  name                String               @unique
  employees           Employee[]
  onboardingTemplates OnboardingTemplate[]
}

// --- SZABLONY ONBOARDINGU (Dla działu) ---
model OnboardingTemplate {
  id           Int        @id @default(autoincrement())
  task         String
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
}

// --- ZADANIA PRACOWNIKA (Konkretne) ---
model OnboardingTask {
  id         Int      @id @default(autoincrement())
  task       String
  completed  Boolean  @default(false)
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}